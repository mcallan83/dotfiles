{
    "breadcrumbs.enabled": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontLigatures": true,
    "editor.fontFamily": "FiraCode-Regular",
    "editor.fontSize": 20,
    "editor.formatOnPaste": true,
    "editor.letterSpacing": 0,
    "editor.lineHeight": 40,
    "editor.minimap.enabled": false,
    "editor.quickSuggestionsDelay": 0,
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "on",
    "explorer.openEditors.visible": 0,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "block",
    "terminal.integrated.fontSize": 18,
    "terminal.integrated.lineHeight": 1.5,
    "window.title": "${activeEditorShort}${separator}${rootName} ${dirty}",
    "workbench.colorCustomizations": {
        "editorWhitespace.foreground": "#FFFFFF22",
        "terminal.ansiBlack": "#000000",
        "terminal.ansiBlue": "#77aad5",
        "terminal.ansiBrightBlack": "#000000",
        "terminal.ansiBrightBlue": "#77aad5",
        "terminal.ansiBrightCyan": "#75d4d5",
        "terminal.ansiBrightGreen": "#a7d3a9",
        "terminal.ansiBrightMagenta": "#d6acd5",
        "terminal.ansiBrightRed": "#f68d8c",
        "terminal.ansiBrightWhite": "#fefefe",
        "terminal.ansiBrightYellow": "#ffd478",
        "terminal.ansiCyan": "#75d4d5",
        "terminal.ansiGreen": "#a7d3a9",
        "terminal.ansiMagenta": "#d6acd5",
        "terminal.ansiRed": "#f68d8c",
        "terminal.ansiWhite": "#fefefe",
        "terminal.ansiYellow": "#ffd478",
        "terminal.background": "#3b3b3b",
        "terminal.foreground": "#d5d5d5",
        "terminalCursor.background": "#3b3b3b",
        "terminalCursor.foreground": "#ffffff"
    },
    "workbench.colorTheme": "Oceanic Next (dimmed bg)",
    "workbench.fontAliasing": "antialiased",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "right",
    "workbench.tree.indent": 20,
    "workbench.tree.renderIndentGuides": "always",
    "zenMode.centerLayout": false,
    "zenMode.fullScreen": false,
    //
    // Plugin Eslint
    //
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "vue",
            "autoFix": true
        }
    ],
    //
    // Plugin: GitLens
    //
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.enabled": false,
    //
    // Plugin: Vim
    //
    "vim.leader": "<space>",
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.sneak": true,
    //
    // Plugin: Vetur
    //
    "vetur.dev.vlsPath": "/Users/mcallan/.config/yarn/global/node_modules/vue-language-server",
    "vetur.format.defaultFormatter.html": "none",
    "vetur.format.defaultFormatter.js": "none"
}
