root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.coffee]
indent_size = 2

[*.cson]
indent_size = 2

[*.lua]
indent_size = 2

[*.js]
indent_size = 2
