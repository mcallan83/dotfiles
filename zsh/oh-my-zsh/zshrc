start_time="$(date +%s)"

# zshrc before
[[ -r ~/.zshrc.before ]] && . ~/.zshrc.before

# disable oh-my-zsh auto update
DISABLE_AUTO_UPDATE=true

# determine os
PLATFORM=''
if [[ $(uname) == 'Linux' ]]; then
    export PLATFORM='LINUX'
elif [[ $(uname) == 'Darwin' ]]; then
    export PLATFORM='OSX'
fi

export DOTFILES=$HOME/.dotfiles
export ZSH=$DOTFILES/vendor/zsh/oh-my-zsh

ZSH_CUSTOM=$DOTFILES/zsh/oh-my-zsh/custom

plugins=(
    brew
    composer
    extract
    git
    grunt
    k
    laravel5
    sublime
    tmux
    tmuxinator
    vi-mode
    web-search
    z
    zshmarks
    zsh-syntax-highlighting
)

source $DOTFILES/zsh/oh-my-zsh/path.zsh
source $ZSH/oh-my-zsh.sh
source $DOTFILES/zsh/oh-my-zsh/exports.zsh
source $DOTFILES/zsh/oh-my-zsh/aliases.zsh
source $DOTFILES/zsh/oh-my-zsh/functions.zsh

# zshrc after
[[ -r ~/.zshrc.after ]] && . ~/.zshrc.after

end_time="$(date +%s)"
# echo .zshrc: $((end_time - start_time)) seconds
