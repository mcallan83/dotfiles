export DOTFILES=$HOME/.dotfiles
export ZSH=$DOTFILES/vendor/zsh/oh-my-zsh

DISABLE_AUTO_UPDATE=true
ZSH_CUSTOM=$DOTFILES/zsh/oh-my-zsh/custom

plugins=(
    brew
    composer
    extract
    git
    laravel5
    laravel-sail
    sublime
    vi-mode
    yarn
    z
    zsh-syntax-highlighting
)

PATH="/usr/local/sbin:$PATH"
PATH="$PATH:$DOTFILES/zsh/oh-my-zsh/bin"

source $ZSH/oh-my-zsh.sh
source $DOTFILES/zsh/oh-my-zsh/exports.zsh

source $DOTFILES/zsh/oh-my-zsh/aliases.zsh
source $DOTFILES/zsh/oh-my-zsh/aliases-docker.zsh
source $DOTFILES/zsh/oh-my-zsh/functions.zsh

if [[ $(uname) == 'Darwin' ]]; then
    source $DOTFILES/zsh/oh-my-zsh/aliases-macos.zsh
    source $DOTFILES/zsh/oh-my-zsh/functions-macos.zsh
fi

source $DOTFILES/zsh/oh-my-zsh/fzf.zsh
source $DOTFILES/zsh/oh-my-zsh/toggle.zsh
source $DOTFILES/zsh/oh-my-zsh/nvm.zsh
source $DOTFILES/zsh/oh-my-zsh/prompt.zsh
