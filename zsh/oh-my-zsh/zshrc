export DOTFILES=$HOME/.dotfiles
export ZSH=$DOTFILES/vendor/zsh/oh-my-zsh

DISABLE_AUTO_UPDATE=true
ZSH_CUSTOM=$DOTFILES/zsh/oh-my-zsh/custom

plugins=(
    brew
    composer
    extract
    git
    k
    laravel5
    sublime
    tmux
    tmuxinator
    vi-mode
    yarn
    z
    zsh-syntax-highlighting
    #zsh-autosuggestions
    #zsh-nvm
)

source $DOTFILES/zsh/oh-my-zsh/platform.zsh
source $DOTFILES/zsh/oh-my-zsh/path.zsh
source $ZSH/oh-my-zsh.sh
source $DOTFILES/zsh/oh-my-zsh/exports.zsh
source $DOTFILES/zsh/oh-my-zsh/aliases.zsh
source $DOTFILES/zsh/oh-my-zsh/functions.zsh
source $DOTFILES/zsh/oh-my-zsh/toggle.zsh
source $DOTFILES/zsh/oh-my-zsh/direnv.zsh
#source $DOTFILES/zsh/oh-my-zsh/autosuggest.zsh

# rvm
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

# nvm
export NVM_DIR="$HOME/.nvm"
[[ -s "/usr/local/opt/nvm/nvm.sh" ]] && source "/usr/local/opt/nvm/nvm.sh"

# iterm2 shell integration
[[ -s "${HOME}/.iterm2_shell_integration.zsh" ]] && source "${HOME}/.iterm2_shell_integration.zsh"
